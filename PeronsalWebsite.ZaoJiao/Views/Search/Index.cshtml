@model SearchIndexModel
@{
    ViewData["Title"] = $"搜索：{Model.Key}";
}

<!-- masonry
    ================================================== -->
<section id="bricks">

    <div class="row masonry">
        <h3>@($"与“{Model.Key}”相关的歌曲有 {Model.Count} 首")</h3>
        <!-- brick-wrapper -->
        <div class="bricks-wrapper">
            <div class="grid-sizer"></div>
            @foreach (var item in Model.Songs)
            {

                <article class="brick entry format-video animate-this">

                    <div class="entry-thumb video-image">
                        <a asp-action="Index" asp-controller="Song" asp-route-id="@item.Id">
                            <img src="@item.Cover" alt="bokeh">
                        </a>
                    </div>

                    <div class="entry-text">
                        <div class="entry-header">

                            <div class="entry-meta">
                                <span class="cat-links">
                                    <a href="#">@item.Album</a>
                                    <a href="#">@item.Artist</a>
                                </span>
                            </div>

                            <h1 class="entry-title"><a asp-action="Index" asp-controller="Song" asp-route-id="@item.Id">@item.Name</a></h1>

                        </div>
                        <div class="entry-excerpt">

                        </div>
                    </div>

                </article> <!-- end article -->
            }

        </div> <!-- end brick-wrapper -->

    </div> <!-- end row -->

    @Html.Raw(Model.Page)
</section> <!-- end bricks -->

