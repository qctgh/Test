<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/res/layui/css/layui.css" rel="stylesheet" media="all" />
    <style>
        .layadmin-header {
            height: 50px;
            line-height: 50px;
            margin-bottom: 0;
            border-radius: 0;
        }

        .layui-breadcrumb {
            padding: 0 15px;
        }
    </style>
</head>
<body class="layui-layout-body">

    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div>
                <a class="layui-logo" href="/Home/Index">Todo369 &middot; 3.0</a>
            </div>
            <!-- 头部区域（可配合layui已有的水平导航） -->
            <ul class="layui-nav layui-layout-left">
                <li class="layui-nav-item"><a href="">控制台</a></li>
                <li class="layui-nav-item"><a href="">商品管理</a></li>
                <li class="layui-nav-item"><a href="">用户</a></li>
                <li class="layui-nav-item">
                    <a href="javascript:;">其它系统</a>
                    <dl class="layui-nav-child">
                        <dd><a href="">邮件管理</a></dd>
                        <dd><a href="">消息管理</a></dd>
                        <dd><a href="">授权管理</a></dd>
                    </dl>
                </li>
            </ul>
            <!--登录分部页-->

            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a class="fly-nav-avatar" href="javascript:;">
                        <img class="layui-nav-img" src="~/res/images/avatar/default.png">
                        <cite class="layui-hide-xs">
                            @*@User.Identity.GetUserName()*@
                        </cite>
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="/Account/Manage">基本设置</a></dd>
                        <dd><a href="/Admin/Home">后台管理</a></dd>
                        <dd><a href="">我的主页</a></dd>
                        <hr style="margin: 5px 0;">
                        @*<dd><a href="/user/logout/" style="text-align: center;">退出</a></dd>*@
                        <dd><a style="text-align: center; " href="javascript:document.getElementById('logoutForm').submit()">注销</a></dd>
                    </dl>
                </li>

                @*<li class="layui-nav-item">
                        @Html.ActionLink(" ", "Login", "../Account", null, new { @class = "iconfont icon-touxiang layui-hide-xs" })
                    </li>
                    <li class="layui-nav-item">
                        @Html.ActionLink("登入", "Login", "../Account")
                    </li>
                    <li class="layui-nav-item">
                        @Html.ActionLink("注册", "Register", "../Account")
                    </li>
                    <li class="layui-nav-item layui-hide-xs">
                        <a href="#" onclick="layer.msg('正在通过QQ登入', {icon:16, shade: 0.1, time:0})" title="QQ登入" class="iconfont icon-qq"></a>
                    </li>
                    <li class="layui-nav-item layui-hide-xs">
                        <a href="#" onclick="layer.msg('正在通过微博登入', {icon:16, shade: 0.1, time:0})" title="微博登入" class="iconfont icon-weibo"></a>
                    </li>*@
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item"><a href="~/">首页</a></li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a class="" href="javascript:;">网站管理</a>
                        <dl class="layui-nav-child">
                            <dd class="@(ViewBag.Title == "文章管理"?"layui-this":"")"><a href="@Url.Content("~/Article/List")">文章管理</a></dd>
                            <dd class="@(ViewBag.Title == "评论管理"?"layui-this":"")"><a href="@Url.Content("~/Comment/List")">评论管理</a></dd>
                            <dd class="@(ViewBag.Title == "过滤词管理"?"layui-this":"")"><a href="@Url.Content("~/FilterWord/List")">过滤词管理</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item ">
                        <a href="javascript:;">系统管理</a>
                        <dl class="layui-nav-child">
                            <dd class="@(ViewBag.Title == "配置管理"?"layui-this":"")"><a href="@Url.Content("~/Setting/List")">配置管理</a></dd>
                            <dd class="@(ViewBag.Title == "字典管理"?"layui-this":"")"><a href="@Url.Content("~/KeyValue/List")">字典管理</a></dd>
                            <dd class="@(ViewBag.Title == "用户管理"?"layui-this":"")"><a href="@Url.Content("~/User/List")">用户管理</a></dd>
                            <dd class="@(ViewBag.Title == "后台用户管理"?"layui-this":"")"><a href="@Url.Content("~/AdminUser/List")">后台用户管理</a></dd>
                            <dd class="@(ViewBag.Title == "角色管理"?"layui-this":"")"><a href="@Url.Content("~/Role/List")">角色管理</a></dd>
                            <dd class="@(ViewBag.Title == "权限管理"?"layui-this":"")"><a href="@Url.Content("~/Permission/List")">权限管理</a></dd>
                            @*<dd><a href="@Url.Content("~/Permission/List")">资源管理</a></dd>*@
                        </dl>
                    </li>
                    <li class="layui-nav-item"><a href="">云市场</a></li>
                    <li class="layui-nav-item"><a href="">发布商品</a></li>
                </ul>
            </div>
        </div>

        <div class="layui-body">
            <div class="layui-card layadmin-header">
                <div class="layui-breadcrumb" lay-filter="breadcrumb" style="visibility: visible;">
                    @*<a lay-href="">主页</a><span lay-separator="">/</span>
                        <a><cite>组件</cite></a><span lay-separator="">/</span>
                        <a><cite>时间线</cite></a>*@
                    <a lay-href="">@ViewBag.BreadCrumb</a>
                </div>
            </div>
            <!-- 内容主体区域 -->
            <div class="layui-fluid" style="background-color: #f2f2f2;padding:15px;">
                <div class="layui-card">
                    <div class="layui-card-header" style="padding:15px;">
                        @RenderSection("toolbar", false)
                    </div>
                    <div class="layui-card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © layui.com - 底部固定区域
        </div>
    </div>
    <div>

    </div>
    <script src="/res/layui/layui.js"></script>
    @RenderSection("scripts", false)
    <script>
        layui.use(['layer', 'laytpl', 'form', 'element'], function () {
            var layer = layui.layer
                , laytpl = layui.laytpl
                , form = layui.form
                , element = layui.element;
        });
    </script>
</body>
</html>
