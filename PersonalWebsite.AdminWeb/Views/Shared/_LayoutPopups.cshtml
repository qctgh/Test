<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/res/layui/css/layui.css" rel="stylesheet" media="all" />
</head>
<body>
    <!-- 内容主体区域 -->
    <div class="layui-fluid" style="background-color: #f2f2f2;padding:15px;">
        <div class="layui-card">
            <div class="layui-card-header" style="padding:15px;">
                @RenderSection("toolbar", false)
            </div>
            <div class="layui-card-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/res/layui/layui.js"></script>
    <script>
        layui.use(['layer', 'laytpl', 'form', 'element'], function () {
            var layer = layui.layer
                , laytpl = layui.laytpl
                , form = layui.form
                , element = layui.element;
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>
