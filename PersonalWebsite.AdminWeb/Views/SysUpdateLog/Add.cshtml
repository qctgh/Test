@model string
@{
    ViewData["Title"] = "系统更新日志管理";
    ViewData["BreadCrumb"] = "主页 / 系统更新日志管理 / 添加日志";
}
@section toolbar{
    <h3>添加日志</h3>
}
<link href="~/res/css/global.css" rel="stylesheet" />
<form id="form1" class="layui-form" asp-action="Add" asp-controller="SysUpdateLog" method="post">
    <div class="layui-form-item layui-form-text">
        <label class="layui-form-label">内容</label>
        <div class="layui-input-block">
            <textarea name="content" required lay-verify="required" placeholder="请输入内容" class="layui-textarea" style=" height: 300px;"></textarea>
        </div>
    </div>

    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-filter="*" lay-submit>保存</button>
        </div>
    </div>
</form>
