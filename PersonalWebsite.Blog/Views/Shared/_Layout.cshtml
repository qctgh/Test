<!DOCTYPE html>
<html lang="zh-Hans-CN">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="renderer" content="webkit">
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="all" />
    <title>@ViewBag.Title-369Blog</title>
    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/layui/css/layui.css" />
    <link rel="stylesheet" href="~/css/master.css" />
    <link rel="stylesheet" href="~/css/gloable.css" />
    <link rel="stylesheet" href="~/css/nprogress.css" />
    @RenderSection("styles", false)
</head>
<body class="lay-blog">
    <div class="header">
    </div>
    <header class="gird-header">
        <div class="header-fixed">
            <div class="header-inner">
                <a href="~/" class="header-logo" id="logo">369Blog</a>
                <nav class="nav" id="nav">
                    <ul>
                        <li><a href="~/#">首页</a></li>
                        <li><a asp-action="Index" asp-controller="Article">博客</a></li>
                        <li><a asp-action="Index" asp-controller="Message">留言</a></li>
                        <li><a asp-action="Index" asp-controller="Link">友链</a></li>
                        <li><a asp-action="About" asp-controller="Home">关于</a></li>
                    </ul>
                </nav>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="blog-user" asp-action="Login" asp-controller="User" asp-route-provider="QQ" asp-route-returnUrl="@this.Context.Request.Path.Value">
                        <i class="fa fa-qq"></i>
                    </a>
                }
                else
                {
                    <a class="blog-user" href="~/user/out?returnUrl=@this.Context.Request.Path.Value">
                        <img src="@User.Claims.Where(p => p.Type == "avator").FirstOrDefault()?.Value">
                    </a>
                }
            </div>
        </div>
    </header>
    @RenderBody()
    <footer class="grid-footer">
        <div class="footer-fixed">
            <div class="copyright">
                <div class="info">
                    <div class="contact">
                        <a href="https://gitee.com/qiect" class="github" target="_blank"><i class="fa fa-github"></i></a>
                        <a href="https://wpa.qq.com/msgrd?v=3&uin=154878690&site=qq&menu=yes" class="qq" target="_blank" title="154878690"><i class="fa fa-qq"></i></a>
                        <a href="mailto:qctvip@vip.163.com" class="email" target="_blank" title="qctvip@vip.163.com"><i class="fa fa-envelope"></i></a>
                        <a href="javascript:void(0)" class="weixin"><i class="fa fa-weixin"></i></a>
                    </div>
                    <p class="mt05">
                        Copyright &copy; 2018-2020 369 京ICP备18054890号-3
                    </p>
                </div>
            </div>
        </div>
    </footer>
    @RenderSection("beginscripts", false)
    <script src="~/layui/layui.js"></script>
    <script src="~/js/yss/gloable.js"></script>
    <script src="~/js/plugins/nprogress.js"></script>
    <script>NProgress.start();</script>
    @RenderSection("loadscripts", false)
    <script>
        window.onload = function () {
            NProgress.done();
        };
    </script>
    @RenderSection("endscripts", false)
</body>
</html>