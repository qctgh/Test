@model ArticleDetailModel
@{
    ViewData["Title"] = Model.Article.Title;
}
<div class="doc-container" id="doc-container">
    <div class="container-fixed">
        <div class="col-content" style="width:100%">
            <div class="inner">
                <article class="article-list">
                    <section class="article-item">
                        <aside class="title" style="line-height:1.5;">
                            <h4>@Model.Article.Title</h4>
                            <p class="fc-grey fs-14">
                                <small>
                                    作者：<a href="javascript:void(0)" class="fc-link">@Model.Article.UserName</a>
                                </small>
                                <small class="ml10">围观群众：<i class="readcount">37</i></small>
                                <small class="ml10">更新于 <label>@Model.Article.PublishDate</label> </small>
                            </p>
                        </aside>
                        <div class="time mt10" style="padding-bottom:0;">
                            <span class="day">@Model.Article.CreateDateTime.Day</span>
                            <span class="month fs-18">@Model.Article.CreateDateTime.Month<small class="fs-14">月</small></span>
                            <span class="year fs-18">@Model.Article.CreateDateTime.Year</span>
                        </div>
                        <div class="content artiledetail" style="border-bottom: 1px solid #e1e2e0; padding-bottom: 20px;">
                            <div class="detail-body photos">
                                @Html.Raw(Model.Article.Content)
                            </div>
                            <div class="copyright mt20">
                                <p class="f-toe fc-black">
                                    非特殊说明，转载请注明出处
                                </p>
                                <p class="f-toe">
                                    本文标题：
                                    <a href="javascript:void(0)" class="r-title">@Model.Article.Title</a>
                                </p>
                                <p class="f-toe">
                                    本文网址：
                                    <a href="#">https://todo369.top/blog/article/detail/@Model.Article.Id</a>
                                </p>
                            </div>
                            <div id="aplayer" style="margin:5px 0"></div>
                            @*<h6>延伸阅读</h6>
                            <ol class="b-relation"></ol>*@
                        </div>
